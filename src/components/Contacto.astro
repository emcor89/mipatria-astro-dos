<!-- contacto -->
<section id="contacto" class="bg-gradient-to-b from-[#738A79] to-[#3b463e] py-20 px-6 md:px-20">
  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
    
    <!-- Información de contacto -->
    <div class="text-[#fef1db]">
      <h4 class="font-subtitulos text-secundario-light text-base md:text-lg tracking-wide mb-2">Contactanos</h4>
      <h2 class="font-subtitulos text-secundario text-lg md:text-3xl font-semibold mb-6">Déjanos guiarte</h2>
      
      <ul class="space-y-2 mb-8 text-base font-parrafos">
        <li><strong>Teléfono:</strong> 593-96-856-5505</li>
        <li><strong>Instagram:</strong> @mipatria_ec</li>
        <li><strong>Dirección:</strong> Av. 09 de Octubre y Av. del Ejército <br> Condominio “La Concordia” piso 2, oficina 202
</li>
        <li><strong>Correo:</strong> MipatriaInfo@mipatriaec.com</li>
      </ul>

      <div class="grid grid-cols-2 gap-4 font-medioparrafo">
        <img src="/img/fotodos.svg" alt="Oficina" class="rounded-xl w-full max-h-[197px] object-cover" />
        <img src="/img/fotomapa.svg" alt="Mapa" class="rounded-xl w-full max-h-[197px] object-cover" />
      </div>
    </div>

    <!-- Formulario -->
    <div class="bg-[#506350] bg-opacity-60 backdrop-blur p-8 rounded-2xl shadow-md text-black w-full max-w-lg mx-auto">
      <h3 class="font-subtitulos text-secundario text-xl font-bold mb-2">Cuéntanos tu caso</h3>
      <p class="font-parrafos mb-6 text-sm text-secundario-light">Nos comunicaremos en el menor tiempo posible</p>

      <form
        action="https://formsubmit.co/emcor89@gmail.com"
        method="POST"
        class="space-y-4"
      >
        <!-- CAMPOS -->
        <div class="flex gap-4">
          <input
            type="text"
            name="Nombre"
            placeholder="Nombre"
            required
            class="w-full p-3 rounded-xl bg-white placeholder-gray-400 outline-none"
          />
          <input
            type="text"
            name="Número"
            placeholder="Número"
            required
            class="w-full p-3 rounded-xl bg-white placeholder-gray-400 outline-none"
          />
        </div>

        <input
          type="email"
          name="Correo"
          placeholder="Correo"
          required
          class="w-full p-3 rounded-xl bg-white placeholder-gray-400 outline-none"
        />

        <textarea
          name="Mensaje"
          placeholder="Mensaje"
          rows="4"
          required
          class="w-full p-3 rounded-xl bg-white placeholder-gray-400 outline-none resize-none"
        ></textarea>

        <!-- OCULTOS -->
        <input type="hidden" name="_captcha" value="false" />
        <input
          type="hidden"
          name="_next"
          value="http://localhost:4321/?success=true#contacto"
        />

        <!-- BOTONES -->
        <div class="flex justify-between items-center gap-4">
          <span class="bg-secundario text-primario text-center px-6 py-3 rounded-xl text-sm w-full">
            0968565505
          </span>
          <button
            type="submit"
            class="bg-primario text-white px-8 py-3 rounded-xl w-full hover:bg-primario-light"
          >
            Enviar
          </button>
        </div>
      </form>
    </div>
  </div>
</section>

<!-- Toast de agradecimiento -->
<div
  id="toast"
  class="fixed bottom-4 right-4 bg-green-600 text-white py-2 px-4 rounded shadow-md opacity-0 transition-opacity duration-300 z-50"
>
  ¡Gracias por contactarnos!
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const urlParams = new URLSearchParams(window.location.search);
    const isSuccess = urlParams.get("success") === "true";

    const toast = document.getElementById("toast");
    if (isSuccess && toast) {
      toast.classList.add("opacity-100");

      setTimeout(() => {
        toast.classList.remove("opacity-100");
      }, 3000);

      // Limpia la URL
      window.history.replaceState(null, "", window.location.pathname);
    }
  });
</script>