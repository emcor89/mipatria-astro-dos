<div class="fixed top-0 h-[90px] z-40 w-full bg-primario">
  <div class="h-[85px] flex justify-between items-center px-8 py-4 w-full max-w-screen-lg mx-auto">
    <!-- Logo -->
    <div class="w-[216px] flex items-center">
      <img src="/img/logoMiPatria.png" alt="MI Patria Logo" />
    </div>

    <!-- Menú Desktop -->
    <ul class="hidden md:flex gap-8 items-center">
      <li class="text-base text-secundario font-parrafos"><a href="#servicios">Servicios</a></li>
      <li class="text-base text-secundario font-parrafos"><a href="#nosotros">Nosotros</a></li>
      <li class="text-base text-secundario font-parrafos"><a href="#contacto">Contacto</a></li>
    </ul>

    <!-- Botón hamburguesa Mobile -->
    <button id="menu-toggle" class="md:hidden text-secundario">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Menú Mobile -->
  <ul
    id="menu-mobile"
    class="hidden md:hidden  flex-col bg-primario mt-0 px-8 py-4 space-y-2 text-secundario font-parrafos border-b border-secundario"
  >
    <li><a href="#servicios" class="block py-2">Servicios</a></li>
    <li><a href="#nosotros" class="block py-2">Nosotros</a></li>
    <li><a href="#contacto" class="block py-2">Contacto</a></li>
  </ul>
</div>

<script type="module">
  if (typeof window !== 'undefined') {
    const toggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("menu-mobile");

    toggle?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });e
  }
</script>

